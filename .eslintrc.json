{
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 2],
    "comma-dangle": ["error", "only-multiline"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "multi-line"],
    "no-var": "error",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.backup.*"
  ]
}
